{
	"name": "evilspirit",
	"colors": {
		// --- Core Editor ---
		"editor.background": "#232931", // Kept your excellent choice.
		"editor.foreground": "#E8EDF2", // Slightly softer white, less strain.
		"editorCursor.foreground": "#BFA8FF", // Kept. Great for visibility.
		// --- Selection & Highlighting ---
		"editor.selectionBackground": "#3D4753", // Increased contrast from background for better visibility.
		"editor.selectionHighlightBackground": "#3D475355", // Softer version for other occurrences.
		"editor.wordHighlightBackground": "#3D475355", // Softer to not be distracting.
		"editor.wordHighlightStrongBackground": "#4A546055", // Even softer for "strong" highlights.
		"editor.findMatchBackground": "#5E81AC50", // Calmer blue for search matches.
		"editor.findMatchHighlightBackground": "#5E81AC30", // Subtle highlight for other matches.
		"editor.lineHighlightBackground": "#2C343F", // Gentle background for current line. CRUCIAL for eye guidance.
		"editor.lineHighlightBorder": "#2C343F00", // Remove border for a cleaner look.
		// --- Line Numbers ---
		"editorLineNumber.foreground": "#4E5866", // Softer, more muted inactive numbers.
		"editorLineNumber.activeForeground": "#BFA8FF", // Kept. Perfect for active line.
		// --- Gutter ---
		"editorGutter.background": "#232931", // Match editor background.
		"editorGutter.modifiedBackground": "#EBCB8B", // Soft yellow for modified (git).
		"editorGutter.addedBackground": "#A3BE8C", // Soft green for added (git).
		"editorGutter.deletedBackground": "#BF616A", // Soft red for deleted (git).
		// --- Tabs ---
		"tab.activeBackground": "#2B323A", // Kept.
		"tab.activeForeground": "#FFFFFF", // Kept.
		"tab.inactiveBackground": "#1C2128", // Kept.
		"tab.inactiveForeground": "#7F8A96", // Slightly brighter for better readability.
		"tab.border": "#1C2128", // Clean border matching inactive tab.
		"tab.activeBorder": "#BFA8FF", // Top border for active tab. Great visual indicator.
		"tab.activeBorderTop": "#BFA8FF", // Specifically set the top border.
		// --- Side Bar ---
		"sideBar.background": "#1C2128", // Kept.
		"sideBar.foreground": "#ABB4BE", // Slightly brighter for better readability.
		"sideBarSectionHeader.background": "#1C2128", // Match sidebar.
		"sideBarSectionHeader.foreground": "#E8EDF2", // Brighter for section headers.
		"sideBarTitle.foreground": "#ABB4BE", // Title color.
		// --- Activity Bar ---
		"activityBar.background": "#1F262E", // Kept.
		"activityBar.foreground": "#E8EDF2", // Slightly softer white.
		"activityBar.inactiveForeground": "#7F8A96", // Inactive icon color.
		"activityBarBadge.background": "#BFA8FF", // Kept. Great accent.
		"activityBarBadge.foreground": "#1F262E", // Dark text on the badge for contrast.
		// --- Status Bar ---
		"statusBar.background": "#1F262E", // Kept.
		"statusBar.foreground": "#ABB4BE", // Slightly brighter.
		"statusBar.debuggingBackground": "#BF616A", // Clear visual indicator for debug mode.
		"statusBar.noFolderBackground": "#1F262E", // Match standard background.
		"statusBarItem.prominentBackground": "#3D4753", // Background for prominent items like "Run".
		// --- List & Tree Views (File Explorer) ---
		"list.activeSelectionBackground": "#3D4753", // Selected item background.
		"list.activeSelectionForeground": "#E8EDF2",
		"list.inactiveSelectionBackground": "#2C343F", // Selected item in inactive pane.
		"list.hoverBackground": "#2C343F", // Subtle background on hover.
		"list.focusBackground": "#39424F", // Background for focused item (keyboard nav).
		// --- Inputs & Dropdowns ---
		"input.background": "#2B323A",
		"input.foreground": "#E8EDF2",
		"input.placeholderForeground": "#7F8A96",
		"inputOption.activeBorder": "#BFA8FF", // Border for active options (e.g., regex in search).
		"dropdown.background": "#2B323A",
		"dropdown.foreground": "#E8EDF2",
		// --- Scrollbar ---
		"scrollbarSlider.background": "#daa5206e", // Subtle, visible only on hover.
		"scrollbarSlider.hoverBackground": "#DAA520",
		"scrollbarSlider.activeBackground": "#2ecf8490",
		// --- Brackets & Guides ---
		"editorBracketMatch.background": "#2C343F00", // Transparent background
		"editorBracketMatch.border": "#5E81AC80", // Soft blue border for matching brackets.
		"editorIndentGuide.background1": "#2C343F", // Subtle indent guides.
		"editorIndentGuide.activeBackground1": "#3D4753" // Slightly brighter active guide.
	},
